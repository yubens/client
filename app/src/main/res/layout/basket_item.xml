<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:columnCount="8"
    android:rowCount="3"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/txtGridName"
        android:layout_width="400dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="8"
        android:text="Lorem ipsum dolor sit amet, consectetur"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_minus_button" />

    <TextView
        android:id="@+id/txtGridQuantity"
        android:ems="1"
        android:layout_row="1"
        android:gravity="center_horizontal"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:textSize="18sp"
        android:text="99" />

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_row="1"
        android:layout_column="3"
        android:background="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_add_button" />

    <TextView
        android:id="@+id/txtStringQuan"
        android:layout_width="wrap_content"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:textSize="18sp"
        android:text="unidad(es) x $" />

    <TextView
        android:id="@+id/txtGridPrice"
        android:ems="3"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_columnSpan="2"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:text="999,99" />

    <TextView
        android:id="@+id/txtGridStringTotal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:textSize="18sp"
        android:text="Subtotal $" />

    <TextView
        android:id="@+id/txtGridTotal"
        android:ems="4"
        android:layout_row="2"
        android:layout_column="4"
        android:textAlignment="textEnd"
        android:layout_columnSpan="1"
        android:textSize="18sp"
        android:text="99999,99
" />




</GridLayout>